<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/gray"
    android:orientation="horizontal"
    android:id="@+id/cons_layout2">

<ImageView
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:id="@+id/imageView"
    android:src="@drawable/chiken"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.102"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.049"></ImageView>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="170dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        >
        <TextView
            android:layout_gravity="center"
            android:id="@+id/textShop1"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="0dp"></TextView>

        <TextView
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/textShop2"></TextView>

        <TextView
            android:layout_gravity="end"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/textShop3"></TextView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>